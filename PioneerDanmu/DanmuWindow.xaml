<Window x:Class="PioneerDanmu.DanmuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PioneerDanmu"
        mc:Ignorable="d"
        AllowsTransparency="True"
        IsEnabled="False"
        Focusable="False"
        ShowInTaskbar="False"
        Background="Transparent"
        WindowStyle="None"
        WindowState="Maximized"
        Topmost="True"
        IsHitTestVisible="False"
        Opacity="0.7"
        Title="DanmuWindow" Height="450" Width="800">
    <Grid>
        <local:LotteryRect x:Name="rect" Panel.ZIndex="10000" Width="800" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center"></local:LotteryRect>

        <Canvas RenderOptions.BitmapScalingMode="LowQuality" x:Name="canvas" Margin="20">
        </Canvas>
    </Grid>
</Window>
